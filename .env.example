# ==============================================
# Asset Management App - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ==============================================

# Environment: "development" or "production"
ENVIRONMENT=development

# Data Source: "mysql" or "airtable"
DATA_SOURCE=mysql

# ==============================================
# AIRTABLE CONFIGURATION (if using Airtable)
# ==============================================
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=

# ==============================================
# MYSQL CONFIGURATION
# ==============================================
# Local Development
DB_HOST=localhost
DB_PORT=3306
DB_NAME=assetmgmt_db
DB_USER=root
DB_PASSWORD=

# Production (cPanel) - uncomment and fill for production
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=your_cpanel_username_dbname
# DB_USER=your_cpanel_username_dbuser
# DB_PASSWORD=your_secure_password

# ==============================================
# LOGGING & DEBUG
# ==============================================
# Set to "true" to enable debug mode (shows technical errors in UI)
DEBUG=false

# Directory for log files (default: "logs")
LOG_DIR=logs

# ==============================================
# PRODUCTION NOTES
# ==============================================
# 1. Always use environment variables for credentials
# 2. Never commit .env file to version control
# 3. Set ENVIRONMENT=production for production deployment
# 4. Set DEBUG=false in production
# 5. Ensure LOG_DIR is writable by the application
